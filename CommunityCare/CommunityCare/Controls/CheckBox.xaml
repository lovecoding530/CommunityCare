<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityCare.CheckBox">

    <StackLayout Orientation="Horizontal" Spacing="5">
        <Image x:Name="box" WidthRequest="20" HeightRequest="20" VerticalOptions="Center"/>
        <Label x:Name="textLabel" FontSize="18" VerticalTextAlignment="Center"/>
    </StackLayout>

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnCheckBoxTapped" />
    </ContentView.GestureRecognizers>
</ContentView>